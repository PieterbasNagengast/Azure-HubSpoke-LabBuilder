name: "CleanUp"

on:
  push:
    branches: none
  pull_request:
    branches: none
  workflow_dispatch:

jobs:
  VNETremoval:
    name: "Remove VNET deployment"
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3.5.2
      - name: Azure Login
        uses: azure/login@v1
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}
      - name: Cleanup Hub Subsription
        run: |
          echo 'Switching to Hub Subscription...'
          az account set --subscription ${{ secrets.HUB_SUBSCRIPTION_ID }}
          echo 'List of Resource groups to be deleted....'
          az group list --tag LabBuilder=Validation --tag LabBuilderType=VNET --output table
          echo 'Removing Resource groups...'
          az group list --tag LabBuilder=Validation --tag LabBuilderType=VNET --query "[].[name]" --output tsv | xargs -l az group delete --yes --no-wait --name
      - name: Cleanup Spoke Subsription
        run: |
          echo 'Switching to Spoke Subscription...'
          az account set --subscription ${{ secrets.SPOKE_SUBSCRIPTION_ID }}
          echo 'List of Resource groups to be deleted....'
          az group list --tag LabBuilder=Validation --tag LabBuilderType=VNET --output table
          echo 'Removing Resource groups...'
          az group list --tag LabBuilder=Validation --tag LabBuilderType=VNET --query "[].[name]" --output tsv | xargs -l az group delete --yes --no-wait --name
      - name: Cleanup OnPrem Subsription
        run: |
          echo 'Switching to OnPrem Subscription...'
          az account set --subscription ${{ secrets.SPOKE_SUBSCRIPTION_ID }}
          echo 'List of Resource groups to be deleted....'
          az group list --tag LabBuilder=Validation --tag LabBuilderType=VNET --output table
          echo 'Removing Resource groups...'
          az group list --tag LabBuilder=Validation --tag LabBuilderType=VNET --query "[].[name]" --output tsv | xargs -l az group delete --yes --no-wait --name
          