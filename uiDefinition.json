{
	"$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
	"view": {
		"kind": "Form",
		"properties": {
			"title": "Hub & Spoke playground - LAB Builder",
			"steps": [
				{
					"name": "basics",
					"label": "Basics",
					"elements": [
						{
							"name": "Intro",
							"type": "Microsoft.Common.Section",
							"label": "Azure Hub & Spoke Playground - LAB Builder",
							"elements": [
								{
									"name": "IntroText",
									"type": "Microsoft.Common.TextBlock",
									"options": {
										"text": "This template will deploy a Hub & Spoke topology in Azure. The topology can be used to test and learn about Azure networking. The template will deploy a Hub VNET, Spoke VNET's and optionally an OnPrem VNET. The template will also deploy VM's in the VNET's.",
										"link": {
											"label": "Learn more",
											"uri": "https://github.com/PieterbasNagengast/Azure-HubSpoke-LabBuilder"
										}
									}
								}
							]
						},
						{
							"name": "Subscription",
							"type": "Microsoft.Common.SubscriptionSelector",
							"label": "Subscription"
						},
						{
							"name": "First",
							"type": "Microsoft.Common.Section",
							"label": "First Region",
							"elements": [
								{
									"name": "Region",
									"type": "Microsoft.Common.LocationSelector",
									"label": "Azure Region:",
									"toolTip": "Select a region for deployment, excluding the previously selected region."
								},
								{
									"name": "AddressSpace",
									"type": "Microsoft.Common.TextBox",
									"label": "IP Address Space",
									"defaultValue": "172.16.0.0/16",
									"toolTip": "IP Address space used for VNETs in deployment. Only enter a /16 subnet. Default = 172.16.0.0/16",
									"constraints": {
										"required": true,
										"regex": "^(10(?:\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?))\\.0\\.0\\/16)|(172\\.(?:1[6-9]|2\\d|3[0-1])\\.0\\.0\\/16)|(192\\.168\\.0\\.0\\/16)",
										"validationMessage": "The value must match a /16 subnet. 10.[0-255].0.0/16 or 172.[16-31].0.0/16 or 192.168.0.0/16"
									},
									"visible": true
								}
							]
						},
						{
							"name": "DeployMultiRegion",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy in Multi Region?"
						},
						{
							"name": "Second",
							"type": "Microsoft.Common.Section",
							"label": "Second Region",
							"elements": [
								{
									"name": "Region",
									"type": "Microsoft.Common.LocationSelector",
									"label": "Azure Region:",
									"toolTip": "Select the second region for deployment. Default = First Region"
								},
								{
									"name": "AddressSpace",
									"type": "Microsoft.Common.TextBox",
									"label": "IP Address Space",
									"defaultValue": "172.31.0.0/16",
									"toolTip": "IP Address space used for VNETs in deployment. Only enter a /16 subnet. Default = 172.16.0.0/16",
									"constraints": {
										"required": true,
										"regex": "^(10(?:\\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?))\\.0\\.0\\/16)|(172\\.(?:1[6-9]|2\\d|3[0-1])\\.0\\.0\\/16)|(192\\.168\\.0\\.0\\/16)",
										"validationMessage": "The value must match a /16 subnet. 10.[0-255].0.0/16 or 172.[16-31].0.0/16 or 192.168.0.0/16"
									},
									"visible": true
								}
							],
							"visible": "[equals(steps('basics').DeployMultiRegion,true)]"
						}
					]
				},
				{
					"name": "Hub",
					"label": "Hub",
					"elements": [
						{
							"name": "Intro",
							"type": "Microsoft.Common.Section",
							"label": "Azure Hub & Spoke Playground - Hub",
							"elements": [
								{
									"name": "IntroText",
									"type": "Microsoft.Common.TextBlock",
									"options": {
										"text": "Choose to deploy a Hub. The Hub can be deployed as a VNET or as a VWAN. The Hub can also be used to deploy a Firewall, Bastion and/or VPN Gateway. The Hub will be connected to the Spoke VNET's.",
										"link": {
											"label": "Learn more",
											"uri": "https://github.com/PieterbasNagengast/Azure-HubSpoke-LabBuilder"
										}
									}
								}
							]
						},
						{
							"name": "Deploy",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Deploy Hub",
							"defaultValue": "yes",
							"toolTip": "Deploy Hub VNET",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": true
						},
						{
							"name": "First",
							"type": "Microsoft.Common.Section",
							"label": "[concat('Select subscription for region: ',steps('basics').First.Region.displayName)]",
							"elements": [
								{
									"type": "Microsoft.Common.SubscriptionSelector",
									"name": "Subscription"
								}
							],
							"visible": "[equals(steps('Hub').Deploy,true)]"
						},
						{
							"name": "Second",
							"type": "Microsoft.Common.Section",
							"label": "[concat('Select subscription for region: ',steps('basics').Second.Region.displayName)]",
							"elements": [
								{
									"type": "Microsoft.Common.SubscriptionSelector",
									"name": "Subscription"
								}
							],
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('basics').DeployMultiRegion,true))]"
						},
						{
							"name": "VNETorVWAN",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Hub as vWAN or VNET",
							"defaultValue": "VNET",
							"toolTip": "Deploy Hub as Virtual or in traditional VNET?",
							"constraints": {
								"allowedValues": [
									{
										"label": "VNET",
										"value": "VNET"
									},
									{
										"label": "VWAN",
										"value": "VWAN"
									}
								],
								"required": true
							},
							"visible": "[equals(steps('Hub').Deploy,true)]"
						},
						{
							"name": "deployVnetPeeringAVNM",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Deploy Azure Virtual Network Manager (AVNM)",
							"defaultValue": "no",
							"toolTip": "Let Azure Virtual Network Manager manage VNET Peerings",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('Hub').VNETorVWAN,'VNET'))]"
						},
						{
							"name": "hubRgName",
							"type": "Microsoft.Common.TextBox",
							"label": "Hub Resource Group Name",
							"defaultValue": "rg-hub",
							"toolTip": "Use only allowed characters",
							"placeholder": "",
							"multiLine": false,
							"constraints": {
								"required": true,
								"validations": [
									{
										"regex": "^[a-zA-Z0-9_\\-\\.]+$",
										"message": "Only alphanumeric and numeric characters are allowed including symbols like: _ and . and -"
									}
								]
							},
							"visible": "[equals(steps('Hub').Deploy,true)]"
						},
						{
							"name": "deployBastionInHub",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Deploy Bastion In Hub",
							"defaultValue": "no",
							"toolTip": "Deploy Bastion Host in Hub VNET",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('Hub').VNETorVWAN,'VNET'))]"
						},
						{
							"name": "bastionInHubSKU",
							"type": "Microsoft.Common.DropDown",
							"label": "Azure Bastion SKU",
							"defaultValue": "Basic",
							"toolTip": "Azure Bastion SKU: Basic or Standard",
							"constraints": {
								"required": false,
								"allowedValues": [
									{
										"label": "Standard",
										"value": "Standard"
									},
									{
										"label": "Basic",
										"value": "Basic"
									},
									{
										"label": "Premium",
										"value": "Premium"
									}
								]
							},
							"visible": "[equals(steps('Hub').deployBastionInHub,true)]"
						},
						{
							"name": "deployGatewayInHub",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Deploy Virtual Network Gateway In Hub",
							"defaultValue": "no",
							"toolTip": "Deploy Virtual Network Gateway in Hub VNET",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[equals(steps('Hub').Deploy,true)]"
						},
						{
							"name": "hubBgp",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Enable BGP",
							"defaultValue": "no",
							"toolTip": "Enable BGP on VPN Gateway",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('Hub').deployGatewayInHub,true))]"
						},
						{
							"name": "hubBgpAsn",
							"type": "Microsoft.Common.TextBox",
							"label": "Hub BGP ASN",
							"defaultValue": "",
							"toolTip": "Use only allowed characters. For VNET deployments: default BGP ASN for Hub = 65010. For vWAN deployments: default BGP for vWAN Hub = 65515",
							"placeholder": "[if(equals(steps('Hub').VNETorVWAN,'VNET'),65010,65515)]",
							"multiLine": false,
							"constraints": {
								"required": true,
								"validations": [
									{
										"regex": "\\b\\d{5}\\b",
										"message": "Only 5 digit mumber"
									},
									{
										"isValid": "[or(and(equals(steps('Hub').hubBgpAsn,'65515'),equals(steps('Hub').VNETorVWAN,'VWAN')),and(not(equals(steps('Hub').hubBgpAsn,'65515')),equals(steps('Hub').VNETorVWAN,'VNET')))]",
										"message": "Use only allowed characters. For VNET deployments: default BGP ASN for Hub = 65010. For vWAN deployments: default BGP for vWAN Hub = 6551. Note1: Hub BGP and OnPrem BGP cannot be the same. Note2: BGP on Site-to-Site VPN tunnels between Azure VPN gateways (VNET only) cannot use the Azure default BGP ASN 65515, therefore defaulting to BGP ASN 65010."
									}
								]
							},
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('Hub').deployGatewayInHub,true),equals(steps('Hub').hubBgp,true))]"
						},
						{
							"name": "deployFirewallInHub",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Deploy Firewall In Hub",
							"defaultValue": "no",
							"toolTip": "Deploy Azure Firewall in Hub VNET. includes deployment of custom route tables in Spokes and Hub VNETs",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[equals(steps('Hub').Deploy,true)]"
						},
						{
							"name": "AzureFirewallTier",
							"type": "Microsoft.Common.DropDown",
							"label": "Azure Firewall Tier",
							"defaultValue": "Standard",
							"toolTip": "Azure Firewall Tier: Standard or Premium",
							"constraints": {
								"required": false,
								"allowedValues": [
									{
										"label": "Standard",
										"value": "Standard"
									},
									{
										"label": "Premium",
										"value": "Premium"
									}
								]
							},
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('Hub').deployFirewallInHub,true))]"
						},
						{
							"name": "AzureFirewallDNSproxy",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Enable Azure Firewall DNS Proxy",
							"defaultValue": "no",
							"toolTip": "Enable Azure Firewall DNS Proxy",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('Hub').deployFirewallInHub,true))]"
						},
						{
							"name": "deployFirewallrules",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Deploy Firewall policy rules",
							"defaultValue": "yes",
							"toolTip": "Deploy Firewall policy Rule Collection group which allows spoke-to-spoke and internet traffic",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('Hub').deployFirewallInHub,true))]"
						},
						{
							"name": "deployUDRs",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Deploy route tables (UDR's) to VM subnet(s) in Hub and Spokes",
							"defaultValue": "yes",
							"toolTip": "Deploy route tables (UDR's) to VM subnet(s) in Hub and Spokes",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('Hub').VNETorVWAN,'VNET'),equals(steps('Hub').deployFirewallInHub,true))]"
						},
						{
							"name": "enableRoutingIntent",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Enable Azure vWAN Routing Intent",
							"defaultValue": "no",
							"toolTip": "Enable Azure vWAN Routing Intent for Internet and/or Public IP traffic to be routed through Azure Firewall in vWAN Hub. Requires Azure Firewall to be deployed in vWAN Hub",
							"constraints": {
								"allowedValues": [
									{
										"label": "no",
										"value": false
									},
									{
										"label": "Private Traffic Only",
										"value": "private"
									},
									{
										"label": "Internet Traffic Only",
										"value": "internet"
									},
									{
										"label": "Internet and Private Traffic",
										"value": "privateAndInternet"
									}
								],
								"required": true
							},
							"visible": "[and(equals(steps('Hub').Deploy,true),equals(steps('Hub').VNETorVWAN,'VWAN'),equals(steps('Hub').deployFirewallInHub,true))]"
						}
					]
				},
				{
					"name": "Spoke",
					"label": "Spoke(s)",
					"elements": [
						{
							"name": "Intro",
							"type": "Microsoft.Common.Section",
							"label": "Azure Hub & Spoke Playground - Spoke VNET's",
							"elements": [
								{
									"name": "IntroText",
									"type": "Microsoft.Common.TextBlock",
									"options": {
										"text": "Choose to deploy Spoke(s). If a Hub is deployed, the Spokes will be connected to the Hub (Eithter VNET or VWAN).",
										"link": {
											"label": "Learn more",
											"uri": "https://github.com/PieterbasNagengast/Azure-HubSpoke-LabBuilder"
										}
									}
								}
							]
						},
						{
							"name": "Deploy",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Deploy Spokes",
							"defaultValue": "yes",
							"toolTip": "Deploy Spoke VNETs",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": true
						},
						{
							"name": "First",
							"type": "Microsoft.Common.Section",
							"label": "[concat('Select subscription for region: ',steps('basics').First.Region.displayName)]",
							"elements": [
								{
									"type": "Microsoft.Common.SubscriptionSelector",
									"name": "Subscription"
								}
							],
							"visible": "[equals(steps('Spoke').Deploy,true)]"
						},
						{
							"name": "Second",
							"type": "Microsoft.Common.Section",
							"label": "[concat('Select subscription for region: ',steps('basics').Second.Region.displayName)]",
							"elements": [
								{
									"type": "Microsoft.Common.SubscriptionSelector",
									"name": "Subscription"
								}
							],
							"visible": "[and(equals(steps('Spoke').Deploy,true),equals(steps('basics').DeployMultiRegion,true))]"
						},
						{
							"name": "spokeRgNamePrefix",
							"type": "Microsoft.Common.TextBox",
							"label": "Spoke Resource Group prefix Name",
							"defaultValue": "rg-spoke",
							"toolTip": "Use only allowed characters",
							"placeholder": "",
							"multiLine": false,
							"constraints": {
								"required": true,
								"validations": [
									{
										"regex": "^[a-zA-Z0-9_\\-\\.]+$",
										"message": "Only alphanumeric and numeric characters are allowed including symbols like: _ and . and -"
									}
								]
							},
							"visible": "[equals(steps('Spoke').Deploy,true)]"
						},
						{
							"name": "amountOfSpokes",
							"type": "Microsoft.Common.Slider",
							"min": 1,
							"max": 25,
							"label": "Amount Of Spokes",
							"sublabel": "# of Spoke",
							"defaultValue": 2,
							"showStepMarkers": false,
							"toolTip": "Amount of Spoke VNETs you want to deploy. Default = 2",
							"constraints": {
								"required": false
							},
							"visible": "[equals(steps('Spoke').Deploy,true)]"
						},
						{
							"name": "deployVnetPeeringMesh",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Directly connect Spoke VNET's in AVNM topology",
							"defaultValue": "no",
							"toolTip": "directly connect spoke virtual networks to each other in a fully meshed topology using standard VNET peerings.",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[equals(steps('Hub').deployVnetPeeringAVNM,true)]"
						},
						{
							"name": "deployAvnmUDRs",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Let AVNM manage UDR's in Spokes",
							"defaultValue": "no",
							"toolTip": "Let AVNM manage UDR's in Spokes VNET's. This will override the UDR's deployed in the Spokes VNET's. Note: this will only work if AVNM is deployed in Hub VNET.",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": "[and(equals(steps('Hub').deployVnetPeeringAVNM,true),equals(steps('Hub').deployFirewallInHub,true))]"
						},
						{
							"name": "PeeringMeshInfoAVNM",
							"type": "Microsoft.Common.InfoBox",
							"options": {
								"text": "AVNM will be deployed in Hub. Directly Connected Groups in AVNM will be used.",
								"style": "Info"
							},
							"visible": "[and(equals(steps('Spoke').deployVnetPeeringMesh,true),equals(steps('Hub').deployVnetPeeringAVNM,true))]"
						},
						{
							"name": "EnablePrivateSubnet",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Enable Private Subnet (no default outbound access)",
							"defaultValue": "yes",
							"toolTip": "Enable Private Subnet on Default Subnet in Spoke VNET/'s",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": false
									},
									{
										"label": "no",
										"value": true
									}
								],
								"required": true
							},
							"visible": "[and(equals(steps('Spoke').Deploy,true),equals(steps('Hub').deployFirewallInHub,true),equals(steps('Hub').deployUDRs,true))]"
						}
					]
				},
				{
					"name": "OnPrem",
					"label": "OnPrem",
					"elements": [
						{
							"name": "Intro",
							"type": "Microsoft.Common.Section",
							"label": "Azure Hub & Spoke Playground - Simultate OnPrem",
							"elements": [
								{
									"name": "IntroText",
									"type": "Microsoft.Common.TextBlock",
									"options": {
										"text": "Choose to deploy an simulated OnPrem network (VNET). The OnPrem VNET can be connected to the Hub VNET (or VWAN). The OnPrem VNET can also be used Bastion and/or VPN Gateway. When deploying a VPN Gateway, a Site-to-Site connection will be deployed between the Hub and OnPrem VNET.",
										"link": {
											"label": "Learn more",
											"uri": "https://github.com/PieterbasNagengast/Azure-HubSpoke-LabBuilder"
										}
									}
								}
							]
						},
						{
							"name": "Deploy",
							"type": "Microsoft.Common.OptionsGroup",
							"label": "Deploy OnPrem",
							"defaultValue": "no",
							"toolTip": "Simulate OnPrem as VNET",
							"constraints": {
								"allowedValues": [
									{
										"label": "yes",
										"value": true
									},
									{
										"label": "no",
										"value": false
									}
								],
								"required": true
							},
							"visible": true
						},
						{
							"name": "First",
							"type": "Microsoft.Common.Section",
							"label": "[concat('Select subscription for region: ',steps('basics').First.Region.displayName)]",
